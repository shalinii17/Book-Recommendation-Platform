<%- include("partials/header.ejs") %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>My Profile</h1>
    <div>
    <a href="/" class="btn btn-outline-primary me-2">Home</a>
    <a href="/logout" class="btn btn-danger">Logout</a>
  </div>
  </div>

  <!-- Tab Navigation -->
  <div class="btn-group mb-3">
    <a href="/profile?tab=already" class="btn <%= tab==='already'?'btn-primary':'btn-outline-primary' %>">Already read</a>
    <a href="/profile?tab=recommend" class="btn <%= tab==='recommend'?'btn-primary':'btn-outline-primary' %>">Recommend</a>
    <a href="/profile?tab=save" class="btn <%= tab==='save'?'btn-primary':'btn-outline-primary' %>">Save</a>
  </div>

  <!-- Search Bar -->
  <form action="/profile" method="GET" class="row g-3 mb-3">
    <div class="col-md-6">
      <input type="text" name="query" class="form-control" placeholder="Search by title or author" value="<%= query || '' %>">
    </div>
    <div class="col-md-2">
      <button class="btn btn-primary w-100">Search</button>
    </div>
  </form>

  <!-- If user searched (query) -->
  <% if (query) { %>
    <% if (!searchedBook) { %>
      <div class="alert alert-warning">Sorry, this book doesn't exist.</div>
    <% } else { %>
      <div class="card mb-3">
        <div class="card-body d-flex justify-content-between align-items-center">
          <div>
            <strong><%= searchedBook.title %></strong> by <%= searchedBook.author %> — Genre: <%= searchedBook.genre %> — Rating: <%= searchedBook.rating %>
          </div>
          <% if (user) { %>
            <form action="/add" method="POST">
              <input type="hidden" name="title" value="<%= searchedBook.title %>">
              <input type="hidden" name="author" value="<%= searchedBook.author %>">
              <input type="hidden" name="genre" value="<%= searchedBook.genre %>">
              <input type="hidden" name="rating" value="<%= searchedBook.rating %>">
              <input type="hidden" name="redirect" value="/profile?tab=<%= tab %>">
              <button class="btn btn-success">Add this book</button>
            </form>
          <% } %>
        </div>
      </div>
    <% } %>
  <% } %>

  <!-- Add Book Form -->
  <form action="/add" method="POST" class="row g-3 mb-3">
    <input type="hidden" name="redirect" value="/profile?tab=<%= tab %>">
    <div class="col-md-3"><input type="text" name="title" placeholder="Book Title" class="form-control" required></div>
    <div class="col-md-3"><input type="text" name="author" placeholder="Author" class="form-control" required></div>
    <div class="col-md-3"><input type="text" name="genre" placeholder="Genre" class="form-control"></div>
    <div class="col-md-2"><input type="number" name="rating" placeholder="Rating" class="form-control" step="0.1" min="1" max="5"></div>
    <div class="col-md-1"><button class="btn btn-success w-100">Add</button></div>
  </form>

  <!-- Books Table -->
  <table class="table table-bordered table-striped text-center align-middle">
    <thead class="table-dark">
      <tr><th>Book</th><th>Author</th><th>Genre</th><th>Rating</th><th>Actions</th></tr>
    </thead>
    <tbody>
      <% if (books && books.length) { %>
        <% books.forEach(b => { %>
          <tr>
            <td><%= b.title %></td>
            <td><%= b.author %></td>
            <td><%= b.genre %></td>
            <td><%= b.rating %></td>
            <td>
              <!-- Actions based on tab -->
              <% if(tab==='already'){ %>
                <form action="/unmark" method="POST" style="display:inline">
                  <input type="hidden" name="book_id" value="<%= b.id %>">
                  <input type="hidden" name="redirect" value="/profile?tab=already">
                  <button class="btn btn-sm btn-danger">Remove</button>
                </form>
              <% } else if(tab==='recommend'){ %>
                <form action="/unmark" method="POST" style="display:inline">
                  <input type="hidden" name="book_id" value="<%= b.id %>">
                  <input type="hidden" name="redirect" value="/profile?tab=recommend">
                  <button class="btn btn-sm btn-danger">Remove</button>
                </form>
              <% } else if(tab==='save'){ %>
                <form action="/unmark" method="POST" style="display:inline">
                  <input type="hidden" name="book_id" value="<%= b.id %>">
                  <input type="hidden" name="redirect" value="/profile?tab=save">
                  <button class="btn btn-sm btn-danger">Remove</button>
                </form>
              <% } %>
            </td>
          </tr>
        <% }) %>
      <% } else { %>
        <tr><td colspan="5">No books here yet.</td></tr>
      <% } %>
    </tbody>
  </table>
</div>


<%- include("partials/footer.ejs") %>
