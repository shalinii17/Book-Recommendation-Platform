<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Bootstrap JS (For alerts, modals, etc.) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Tagesschrift&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/style.css">


</head>
<body>
    <div >
        <header>
           <h2 class="tagesschrift-regular ">Books & Beyond</h2>
           <p class="main-para">Your personalized space to read, review, and explore books.</p>
        </header>
    </div>

    <% if (success && success.length > 0) { %>
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    <%= success[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>

<% if (error && error.length > 0) { %>
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    <%= error[0] %>
    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
  </div>
<% } %>



<script>
  // Wait until page loads
  window.addEventListener('DOMContentLoaded', () => {
    // find all alerts (success/error) with dismissible class
    const alerts = document.querySelectorAll('.alert-dismissible');

    if (alerts.length > 0) {
      // after some time (e.g. 5 seconds), fade them out and remove
      setTimeout(() => {
        alerts.forEach(alert => {
          // fade effect (optional)
          alert.classList.remove('show');
          alert.classList.add('fade');  // this helps fade-out if fade styles exist

          // after another small delay, remove from DOM
          setTimeout(() => {
            alert.remove();
          }, 500); // wait for fade transition
        });
      }, 4000); // visible for 4 seconds
    }
  });
</script>